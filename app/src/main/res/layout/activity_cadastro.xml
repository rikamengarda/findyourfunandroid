<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.marlon.findyourfun.cadastro"
    android:background="@color/cerveja"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Cadastro"
                android:id="@+id/txtLabelCad"
                android:textColor="@color/preto"
                android:textStyle="bold"
                android:textSize="@dimen/text_Labels"
                android:layout_marginTop="@dimen/margem_top"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome Completo:"
                android:layout_marginTop="@dimen/margem_bot"
                android:paddingLeft="@dimen/margem_left"
                android:textColor="@color/preto"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/margem_bot"
                android:id="@+id/nomeTextView"/>

            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:id="@+id/editNomeCad"
                android:background="@color/branco"
                android:hint="Nome"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/margem_bot"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:layout_marginTop="@dimen/margem_bot"
                android:layout_marginBottom="@dimen/margem_bot"
                android:paddingLeft="@dimen/margem_left"
                android:textColor="@color/preto"
                android:textStyle="bold"
                android:id="@+id/emailTextView"/>

            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:id="@+id/editEmailCad"
                android:background="@color/branco"
                android:hint="Email"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/margem_bot"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Senha:"
                android:layout_marginTop="@dimen/margem_bot"
                android:layout_marginBottom="@dimen/margem_bot"
                android:paddingLeft="@dimen/margem_left"
                android:textColor="@color/preto"
                android:textStyle="bold"
                android:id="@+id/senhaTextView"/>

            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:padding="10dp"
                android:ems="10"
                android:id="@+id/editPassCad"
                android:background="@color/branco"
                android:hint="Senha"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/margem_bot" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Repita sua Senha:"
                android:layout_marginTop="@dimen/margem_bot"
                android:layout_marginBottom="@dimen/margem_bot"
                android:paddingLeft="@dimen/margem_left"
                android:textColor="@color/preto"
                android:textStyle="bold"
                android:id="@+id/senhaRepetTextView"/>

            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:padding="10dp"
                android:ems="10"
                android:id="@+id/editRePassCad"
                android:background="@color/branco"
                android:hint="Repita sua Senha"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/margem_bot" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cadastrar"
                android:id="@+id/btnCadastro"
                android:background="@color/preto"
                android:textColor="@color/branco"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margem_top"/>
        </LinearLayout>
    </ScrollView>
    />

</RelativeLayout>
