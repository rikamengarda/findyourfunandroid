<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/background_Login"

    tools:context="com.example.marlon.findyourfun.Login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/fb"
                android:id="@+id/btn_Login_facebook"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login "
                android:id="@+id/textView"
                android:textColor="@color/preto"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0"
                android:layout_marginTop="@dimen/margem_top"
                android:layout_marginBottom="@dimen/margem_bot"
                android:textStyle="bold" />

            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:id="@+id/editEmail"
                android:background="@color/branco"
                android:hint="Email"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margem_top"/>

            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:padding="10dp"
                android:ems="10"
                android:id="@+id/editPass"
                android:background="@color/branco"
                android:hint="Senha"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/margem_bot" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Login"
                android:id="@+id/btnLogin"
                android:background="@color/cerveja"
                android:layout_marginTop="@dimen/margem_top"
                android:layout_marginBottom="@dimen/margem_bot"
                android:layout_column="3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ou Crie uma Conta"
                android:id="@+id/txtCriaConta"
                android:textColor="@color/preto"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0"
                android:layout_marginTop="@dimen/margem_top"
                android:layout_marginBottom="@dimen/margem_bot"
                android:textStyle="bold"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Cadastrar"
                android:background="@color/cerveja"
                android:id="@+id/btnCadastrar"
                android:layout_marginTop="@dimen/margem_top"
                android:layout_marginBottom="@dimen/margem_bot"
                />
        </LinearLayout>
    </ScrollView>


</RelativeLayout>
