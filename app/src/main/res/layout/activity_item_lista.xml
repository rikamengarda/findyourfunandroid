<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/imgList"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/marrom"
        android:textSize="25dp"
        android:text="Nome do Bar"
        android:id="@+id/txtNomeBarList"
        android:layout_toRightOf="@+id/imgList"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
         />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/imgList"
        android:layout_below="@+id/txtNomeBarList"
        android:layout_marginLeft="35dp"
        android:id="@+id/imgCervejaList"
        android:src="@drawable/beer"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/marrom"
        android:textSize="15dp"
        android:text="PreÃ§o"
        android:id="@+id/txtPrecoLista"
        android:layout_toRightOf="@+id/imgCervejaList"
        android:layout_below="@+id/txtNomeBarList"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        />

</RelativeLayout>
